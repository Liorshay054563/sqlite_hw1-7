ל"name" = "avocado"    לסכום = 5 
INSERT INTO shopping VALUES (2, 'Milk', 2); id = 2, name = milk, amount= 2
INSERT INTO shopping VALUES (3, 'Bread', 3); id = 3 , name = bread, amount= 3
INSERT INTO shopping VALUES (4, 'Chocolate', 8); id = 4 , name = chocolate, amount=8
INSERT INTO shopping VALUES (5, 'Bamba', 5); id = 5 , name = bamba, amount= 5
